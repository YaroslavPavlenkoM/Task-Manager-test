<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 3.2 Final//EN">
<html>
<head>
    <title>Test Application </title>
    <link href="~/Content/AppContent/Style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/AppContent/alertify.min.css" rel="stylesheet" />
    <script src="~/Scripts/AppScript/alertify.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/AppScript/jquery.twbsPagination.min.js"></script>
    <script src="~/Scripts/AppScript/Action.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12 title_site">
                <img src="~/images/unnamed.png" alt="logo" />
                <h2>Task Manager</h2>
                <div class="pull-rigth">
                    <a data-toggle="modal" data-target="#setting_search" class="pull-left " style="text-decoration: none;">
                        <span class="glyphicon glyphicon-cog" title="setting" data-target="#setting_search"></span>
                    </a>
                    <input id="searchFild" type="text" class="form-control" placeholder="Search">
                    <a id="buttonLogin" data-toggle="modal" data-target="#loginModal" style="text-decoration: none;">
                        <span class="glyphicon glyphicon-log-in" title="log in" data-target="#loginModal"></span>
                    </a>
                    <a data-toggle="modal" data-target="#registrationModal" style="text-decoration: none;">
                        <span class="glyphicon glyphicon-user" title="log out"></span>
                    </a>
                </div>
            </div>
        </div>
        <div class="row top_line"></div>
        <div class="row">

            
            <div class="col-md-10 col-md-push-1 col-md-pull-1" style="padding-top: 10px">
                <div style="margin-left: 124px;">
                    <a data-toggle="modal" data-target="#editModal" style="text-decoration: none; margin-top: 1px;">
                        <button id="addTask" type="button" class="btn btn-success" data-target="#editModal">Add new task</button>
                    </a>

                 <button id="getAllTasks" type="button" class="btn btn-primary" data-target="#editModal">Get all tasks</button>
                </div>
                <div class="list_task">
                    
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div style="width:600px; height:40px; margin:auto">
            <ul class="paginationStyle pagination-lg" id="pagin">
            </ul>
        </div>
    </div>
    <!-- modal login -->
    <div id="loginModal" class="modal fade form_registration" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" type="button" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Login</h4>
                </div>
                <div class="modal-body">
                    <input id="txtUsername" type="text" class="form-control" placeholder="User Name">
                    <input id="txtPasswordLogin" type="password" class="form-control" placeholder="Password">
                </div>
                <div class="modal-footer">
                    <button id="btnLogin" type="button" class="btn btn-primary">Go</button>
                </div>
            </div>
        </div>
    </div>

    <!-- modal registration -->
    <div id="registrationModal" class="modal fade form_registration">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" type="button" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Login</h4>
                </div>
                <div class="modal-body">
                    <input id="txtEmail" type="text" class="form-control" placeholder="User Name">
                    <input id="txtPassword" type="password" class="form-control" placeholder="Password">
                    <input id="txtConfirmPassword" type="password" class="form-control" placeholder="Confirm password">
                </div>
                <div class="modal-footer">
                    <button id="btnRegister" type="button" class="btn btn-primary">Go</button>
                </div>
            </div>
        </div>
    </div>

    <div id="setting_search" class="modal fade form_registration">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" type="button" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Search setting</h4>
                </div>
                <div class="modal-body row">

                        <!-- Default panel contents -->
                        <!-- List group -->
                        <ul class="list-group">
                            <li class="list-group-item " style="border-width: 0px 0;">
                                Search by task
                                <div class="material-switch pull-right">
                                    <input id="searchByTask" name="someSwitchOption001" type="checkbox" checked/>
                                </div>
                            </li>
                            <li class="list-group-item" style="border-width: 0px 0;">
                                Search by description
                                <div class="material-switch pull-right">
                                    <input id="searchByDescription" name="someSwitchOption001" type="checkbox" checked/>
                                </div>
                            </li>
                        </ul>
                </div>
            </div>
        </div>
    </div>


    <!-- modal edit&create -->
    <div id="editModal" class="modal fade form_edit">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">

                    <button class="close" type="button" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Edit</h4>
                </div>
                <div class="modal-body">
                    <input id="titleName" type="text" class="form-control" placeholder="Title">
                    <hr>
                    <textarea class="span6" id="description" rows="3" placeholder="Description" style="width: 559px; height: 219px;" required></textarea>
                </div>
                <div class="modal-footer">
                    <button id="saveButton" idUser="" action="" type="button" class="btn btn-success">Save</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>